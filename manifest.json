{
  "manifest_version": 2,
  "name": "GitHub Repo Shortcut",
  "version": "1.3.0",

  "description": "Faster access to your repos!",
  "short_name": "Repo Shortcut",
  "permissions": ["activeTab", "declarativeContent", "tabs"],

  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["override.js"]
    }
  ],

  "page_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon32.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon32.png",
    "128": "icons/icon128.png"
  }
}
